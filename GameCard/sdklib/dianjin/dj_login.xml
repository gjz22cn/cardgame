<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/join_bj" >

    <RelativeLayout
        android:id="@+id/game_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <!-- android:background="@drawable/game_green_new_bg" > -->

        <RelativeLayout
            android:id="@+id/katong"
            android:layout_width="200dp"
            android:layout_height="236dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:background="@drawable/katong" >
        </RelativeLayout>
        <!-- android:background="@drawable/katong" -->

        <RelativeLayout
            android:id="@+id/login_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="240dp" >

            <!-- android:background="@drawable/loginbj" > -->

            <LinearLayout
                android:id="@+id/enter_game"
                android:layout_width="285dp"
                android:layout_height="280dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/entry_bar"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/account_marginTop"
                    android:visibility="invisible" >

                    <EditText
                        android:id="@+id/account"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/login_btn"
                        android:background="@drawable/shuruk"
                        android:drawableLeft="@drawable/login_person"
                        android:imeOptions="actionNext|flagNoExtractUi"
                        android:inputType="text"
                        android:maxLength="8"
                        android:paddingLeft="5dp"
                        android:selectAllOnFocus="true" />

                    <Button
                        android:id="@+id/drop_down_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/account"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/drop_down_btn" >
                    </Button>
                </RelativeLayout>

                <EditText
                    android:id="@+id/account_pwd"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shuruk"
                    android:drawableLeft="@drawable/login_key"
                    android:imeOptions="actionNext|flagNoExtractUi"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:paddingLeft="5dp"
                    android:selectAllOnFocus="true"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="invisible" >

                    <CheckBox
                        android:id="@+id/show_pwd_box"
                        style="@style/gameCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/show_pwd"
                        android:textColor="#783C00" />

                    <CheckBox
                        android:id="@+id/remember_pwd_box"
                        style="@style/gameCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:checked="true"
                        android:text="@string/remember_pwd"
                        android:textColor="#783C00" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login_layout_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/enter_game_marginLeft"
                    android:layout_marginRight="@dimen/enter_game_marginLeft"
                    android:layout_marginTop="@dimen/login_layout_btn_marginTop"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/login_btn"
                        android:layout_width="130dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/login_btn_dj_bg" />

                    <Button
                        android:id="@+id/forget_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@null"
                        android:singleLine="true"
                        android:text="忘记密码"
                        android:textColor="#783C00"
                        android:textSize="13sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/gonggao"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/announceet_top"
        android:visibility="visible" />

    <!-- 公告栏 -->

    <RelativeLayout
        android:id="@+id/gg_detail"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="42dp"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/test"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/announceet_xiao"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/room_list_scrollView"
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="30dp"
            android:fadingEdge="none"
            android:scrollbars="none"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/gg_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:textColor="#8C5709"
                        android:textSize="15dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/gg_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="#8C5709"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/gg_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="#8C5709"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/gg_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="#8C5709"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/gg_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="#8C5709"
                    android:textSize="11dp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <Button
        android:id="@+id/update"
        android:layout_width="50dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/update_btn_bg"
        android:visibility="visible" />

</RelativeLayout>