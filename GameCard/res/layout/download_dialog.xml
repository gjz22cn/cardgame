<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mm_layout"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:background="@drawable/photo_bg" >


                <TextView
                    android:id="@+id/single_common_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="25dp"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:text="当前为2G/3G环境,会耗一定的流量，是否下载？"
                    android:textSize="18sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <Button
                    android:id="@+id/single_common_cancel"
                    style="@style/dialog_cancle_btn_style"
                    android:layout_marginRight="100dp"
                    android:visibility="visible"
                    android:text="稍后下载"/>

                <Button
                    android:id="@+id/single_common_ok"
                    style="@style/dialog_ok_btn_style"
                    android:text="下载" />
            </LinearLayout>

</LinearLayout>