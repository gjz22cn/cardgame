<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="105dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/gedlli_ll"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_margin="1dp"
        android:background="@null"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/gedlli_icon_iv"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:background="@drawable/game_end_dibei" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/gedlli_name_tv"
                style="@style/game_end_text2"
                android:text="底倍"
                android:layout_weight="1.5"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/gedlli_symbol_tv"
                style="@style/game_end_text2"
                android:layout_weight="0.5"
                android:text="X"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/gedlli_num_tv"
                style="@style/game_end_text2"
                android:gravity="left|center_vertical"
                android:text="888"
                android:layout_weight="1.5"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>