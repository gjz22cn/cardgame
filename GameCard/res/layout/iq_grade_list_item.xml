<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="200dp" >

    <RelativeLayout
        android:id="@+id/igli_bg_rl"
        android:layout_width="460dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/iq_grade_list_item_bg" >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_iq_title_" />

        <ImageView
            android:id="@+id/igli_man_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/igli_line_iv"
            android:layout_width="60dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/igli_man_iv" />

        <TextView
            android:id="@+id/igli_explanation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/igli_man_iv"
            android:text="DSF"
            android:textColor="#ff562b10"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/igli_explanation_tv"
            android:layout_alignBottom="@+id/igli_line_iv"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/igli_man_iv"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/igli_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DSF"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/igli_dunpai_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp">
            </RelativeLayout>

            <TextView
                android:id="@+id/igli_zhishang_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DSF"
                android:textSize="10sp"
                android:layout_marginLeft="3dp"
                android:textColor="#ffad7e65" />
        </LinearLayout>

        <TextView
            android:id="@+id/igli_explanation_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/igli_explanation_tv"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/igli_man_iv"
            android:text="SDF"
            android:textColor="#ff562b10"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>