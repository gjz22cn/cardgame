<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mm_layout"
    android:layout_width="@dimen/lot_width"
    android:layout_height="fill_parent"
    android:gravity="top" >

    
    
       <RelativeLayout
        android:id="@+id/change_table"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/choujiang" 
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="2">                       
            <Button 
                  android:id="@+id/choujiang_btn"
                  android:layout_width="50dp"
           		 android:layout_height="fill_parent"
           		 android:background="#00000000"
                android:layout_weight="1"
                />
            <Button 
                  android:id="@+id/zizhuan_btn"
                  android:layout_width="50dp"
           		 android:layout_height="fill_parent"
           		 android:background="#00000000"
                android:layout_weight="1"
                />
        </LinearLayout>

    </RelativeLayout>
   
       <RelativeLayout
        android:id="@+id/lot_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="-2dp"
        android:layout_toRightOf="@+id/change_table"
        android:layout_marginRight="80dp" >

        <!-- android:background="@drawable/lottery_bg" -->

        <LinearLayout
            android:id="@+id/lot_top"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lot_left"
            android:layout_width="55dp"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="65dp"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lot_center"
             android:layout_width="255dp"
            android:layout_height="@dimen/lot_center_height"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="@dimen/lot_text_width"
                android:layout_height="@dimen/lot_text_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/lot_text_top"
                android:layout_marginLeft="-2dp"
                android:background="@drawable/lot_text_bg"
                android:gravity="center" >

                <TextView
                    android:id="@+id/lot_pm"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#E2C816"
                    android:textSize="18dp" />
            </RelativeLayout>

             <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="66dp"
                android:layout_marginTop="@dimen/lot_btn_top"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/lot_start"
                    android:layout_width="55dp"
                    android:layout_height="65dp"
                    android:background="@drawable/lot_start_bg" />

                <Button
                    android:id="@+id/lot_jj_5"
                    android:layout_width="55dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="@dimen/lot_btn_left"
                    android:background="@drawable/lot_jj_5_bg" />

                <Button
                    android:id="@+id/lot_jj_10"
                    android:layout_width="55dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="@dimen/lot_btn_left"
                    android:background="@drawable/lot_jj_10_bg" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/lot_jq_top"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lot_jn"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="@dimen/lot_jq_left"
                    android:background="@drawable/lot_je"
                    android:gravity="center"
                    android:textColor="#B90B0B" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/lot_jn"
                    android:contentDescription="@string/desc"
                    android:gravity="center" />

                <Button
                    android:id="@+id/lot_df"
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/lot_wp"
                    android:layout_width="25dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/lot_wp_left" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lot_right"
            android:layout_width="55dp"
            android:layout_height="180dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/lot_r_right"
            android:layout_marginTop="65dp"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lot_bottom"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/lot_bottom_top"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/lot_luck"
            android:layout_width="60dp"
            android:layout_height="270dp" 
            >

            <!-- android:background="@drawable/lot_right_text" -->
        </RelativeLayout>

        <Button
            android:id="@+id/lot_miss"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/lot_miss_bg" />
    </RelativeLayout>

</RelativeLayout>