<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mm_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TableRow>

            <LinearLayout
                android:id="@+id/single_showmsg_layout"
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/photo_bg" >

                <TextView
                    android:id="@+id/single_common_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="55dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="25dp"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </TableRow>

        <TableRow android:layout_marginTop="-50dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <Button
                    android:id="@+id/single_common_cancel"
                    style="@style/dialog_cancle_btn_style"
                    android:layout_marginRight="100dp"
                    android:visibility="gone"
                    android:text="@string/dialog_cancell2"/>

                <Button
                    android:id="@+id/single_common_ok"
                    style="@style/dialog_ok_btn_style"
                    android:text="@string/dialog_ok2" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</RelativeLayout>