<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/goods_list_layout"
    android:layout_width="450dp"
    android:layout_height="280dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="vertical" >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:src="@drawable/goods_title" />
        <Button 
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
			android:layout_marginRight="10dp"
            android:layout_centerVertical="true"        
            android:background="@drawable/close_btn"
            />
         <Button 
           	android:id="@+id/bag_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
			android:layout_marginRight="5dp"
            android:layout_centerVertical="true"        
            android:background="@android:color/transparent"
            />

    
    </RelativeLayout>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bag_wire" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/vip_join_layout"
            android:layout_width="250dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="0dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/red_layout_views"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"

                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/top_left_tip"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/bean_tip" />

                    <TextView
                        android:id="@+id/top_left_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="金豆："
                        android:textColor="@color/yellow"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/top_left_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20000"
                        android:textColor="#fff600"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/top_right_tip"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/gift_tip" />

                    <TextView
                        android:id="@+id/top_right_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="抽奖券："
                        android:textColor="#fff600"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/top_right_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200"
                        android:textColor="@color/yellow"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/bottom__left_tip"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/diamond_tip" />

                    <TextView
                        android:id="@+id/bottom_left_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="钻石："
                        android:textColor="#fff600"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/bottom_left_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="#fff600"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/values_textview"
                        android:gravity="center"
                        android:textSize="11dp"
                        android:textColor="@color/white"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingRight="5dp"
                        android:layout_width="80dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="@dimen/goods_values_left"
                        android:text="物品宝鉴>>"
                        android:background="@drawable/blue_btn"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/red_layout_views"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="vertical" >

                <GridView
                    android:id="@+id/goodsgridviews"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:horizontalSpacing="2dp"
                    android:numColumns="4"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="2dp" >
                </GridView>
            </LinearLayout>
        </LinearLayout>
        <!-- 分割线 -->

        <ImageView
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/vip_v_line" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|bottom"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/shengxiao_head"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="7dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/daoju" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/shengxiao_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="130dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/shengxiao_describe"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:text="获得途径："
                        android:textColor="#fff600"
                        android:textSize="15dp" />

                    <ListView
                        android:id="@+id/shengxiao_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:cacheColorHint="#00000000"
                        android:divider="#00000000"
                        android:fadingEdge="none"
                        android:scrollbars="none" >
                    </ListView>
                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/recharge_btn"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="55dp"
                android:background="@drawable/green_btn_bg"
                android:text="兑  奖"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:visibility="invisible"
           />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>