<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/envalues_list_layout"
    android:layout_width="450dp"
    android:layout_height="280dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:src="@drawable/goods_values_tip" />

        <Button
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/close_btn" />

        <Button
            android:id="@+id/evalues_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@android:color/transparent" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bag_wire" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="left" >

        <RelativeLayout
            android:id="@+id/shengxiao_head_layout"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/shengxiao_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="9dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:paddingTop="9dp" />

            <ImageView
                android:id="@+id/shengxiao_head_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/daoju" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/shengxiao_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="龙首"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/shengxiao_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                android:text="十二生肖中的龙首，精铜铜打造，须由50钻石锻造而成。"
                android:textColor="@color/white"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="280dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="left"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="85dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="left"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="5dp"
                            android:text="获得途径："
                            android:textColor="@color/yellow"
                            android:textSize="16sp" />

                        <ListView
                            android:id="@+id/evalues_list_view"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:cacheColorHint="#00000000"
                            android:divider="#00000000"
                            android:fadingEdge="none"
                            android:scrollbars="none" >
                        </ListView>
                    </LinearLayout>

                    <Button
                        android:id="@+id/stove_btn"
                        style="@style/task_tip_btn_style"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="348dp"
                        android:text="兑  奖"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/goods_evalue_gridhight"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical" >

                    <HorizontalScrollView
                        android:id="@+id/horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/goods_evalue_gridhight"
                        android:layout_gravity="center_vertical"
                        android:scrollbars="none" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center" >

                            <GridView
                                android:id="@+id/valuesgrid"
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/goods_evalue_gridhight"
                                android:layout_gravity="center_vertical"
                                android:numColumns="3" >
                            </GridView>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>